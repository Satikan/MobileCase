<!--Page Content-->
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="rect-nohover rect-equal-height">
                    <center><h2>สมัครสมาชิก</h2></center>
                    <form class="form-horizontal" name="FormRegister" ng-submit="register()">
                        <h3>ข้อมูลทั่วไป</h3>
                        <div class="form-group" ng-class="{'has-error': FormRegister.firstname.$invalid}">
                            <label for="firstname" class="col-sm-3 control-label">ชื่อ</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="firstname" name="firstname" ng-model="firstnames" placeholder="ชื่อ" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormRegister.lastname.$invalid}">
                            <label for="lastname" class="col-sm-3 control-label">นามสกุล</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="lastname" name="lastname" ng-model="lastnames" placeholder="นามสกุล" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormRegister.email.$invalid}">
                            <label for="email" class="col-sm-3 control-label">อีเมลล์</label>
                            <div class="col-sm-8">
                                <input type="email" class="form-control" id="email" name="email" ng-model="email" placeholder="อีเมลล์" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormRegister.mobile.$invalid}">
                            <label for="mobile" class="col-sm-3 control-label">มือถือ</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="mobile" name="mobile" ng-model="mobile" placeholder="มือถือ" required>
                            </div>
                        </div>
                        <h3>ที่อยู่</h3>
                        <div class="form-group" ng-class="{'has-error': FormRegister.address.$invalid}">
                            <label for="address" class="col-sm-3 control-label">ที่อยู่</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="address" name="address" ng-model="address" placeholder="ที่อยู่" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormRegister.district.$invalid}">
                            <label for="district" class="col-sm-3 control-label">ตำบล/แขวง</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="district" name="district" ng-model="district" placeholder="ตำบล/แขวง" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormRegister.city.$invalid}">
                            <label for="city" class="col-sm-3 control-label">อำเภอ/เขต</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="city" name="city" ng-model="city" placeholder="อำเภอ/เขต" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormRegister.province.$invalid}">
                            <label for="province" class="col-sm-3 control-label">จังหวัด</label>
                            <div class="col-sm-8">
                                <select class="form-control" id="province" name="province" ng-model="province" ng-options="options.ProvinceID as options.ProvinceName for options in Province" required>
                                    <option value="">-- เลือก --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormRegister.zipcode.$invalid}">
                            <label for="zipcode" class="col-sm-3 control-label">รหัสไปรษณีย์</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="zipcode" name="zipcode" ng-model="zipcode" maxlength="5" pattern="[\d-]*" placeholder="รหัสไปรษณีย์" required>
                            </div>
                        </div>
                        <h3>ชื่อผู้ใช้งานและรหัสผ่าน</h3>
                        <div class="form-group" ng-class="{'has-error': FormRegister.username.$invalid}">
                            <label for="username" class="col-sm-3 control-label">ชื่อผู้ใช้งาน</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="username" name="username" ng-model="username" placeholder="ชื่อผู้ใช้งาน" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormRegister.password.$invalid}">
                            <label for="password" class="col-sm-3 control-label">รหัสผ่าน</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="password" name="password" ng-model="password" placeholder="รหัสผ่าน" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormRegister.confirmpassword.$invalid}">
                            <label for="confirmpassword" class="col-sm-3 control-label">ยืนยันรหัสผ่าน</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="confirmpassword" name="confirmpassword" ng-model="confirmpassword" password-confirm match-target="password" placeholder="ยืนยันรหัสผ่าน" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-success" style="height:35px;" ng-disabled="FormRegister.$invalid">บันทึก</button>
                                <button type="button" class="btn btn-danger" style="height:35px;" onclick="parent.location='#/'">ยกเลิก</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="divider divider-lg"></div>
        </div>
    </div>
</section>

<!-- //end Page Content --> 