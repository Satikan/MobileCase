 <!--Page Content-->
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3"></div>
            <div class="col-sm-6 col-md-6 col-lg-6">
                <div class="rect-nohover rect-equal-height">
                    <center><h2>เข้าสู่ระบบ</h2></center>
                    <div class="divider-sm"></div>
                    <form class="form-horizontal" ng-submit="Login()">
                        <div class="form-group">
                            <label for="username" class="col-sm-3 control-label">ชื่อผู้ใช้งาน</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="username" ng-model="UserName" placeholder="ชื่อผู้ใช้งาน">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-3 control-label">รหัสผ่าน</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="inputPassword3" ng-model="Password" placeholder="รหัสผ่าน">
                            </div>
                        </div>
                        <div class="form-group" ng-show="usernotfound == 1">
                            <label for="inputPassword3" class="col-sm-3 control-label"></label>
                            <div class="col-sm-8">
                                <span style="color:red;">ชื่อผู้ใช้งานหรือรหัสผ่านไม่ถูกต้อง</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-primary" style="height:35px;">ลงชื่อเข้าใช้</button>
                                <button type="button" class="btn btn-warning" style="height:35px;">ลืมรหัสผ่าน</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3"></div>
        </div>
    </div>
</section>

