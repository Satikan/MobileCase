<!--Page Content-->
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="rect-nohover rect-equal-height">
                    <center><h2>แก้ไขชื่อผู้ใช้งานและรหัสผ่าน</h2></center>
                    <div class="divider-sm"></div>
                    <form class="form-horizontal" name="FormChangePassword" ng-submit="EditPassword()">
                        <h3>ชื่อผู้ใช้งานและรหัสผ่าน</h3>
                        <div class="form-group" ng-class="{'has-error': FormChangePassword.username.$invalid}">
                            <label for="username" class="col-sm-3 control-label">ชื่อผู้ใช้งาน</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="username" name="username" ng-model="username" placeholder="ชื่อผู้ใช้งาน" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormChangePassword.newpassword.$invalid}">
                            <label for="newpassword" class="col-sm-3 control-label">รหัสผ่านใหม่</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="newpassword" name="newpassword" ng-model="newpassword" placeholder="รหัสผ่านใหม่" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormChangePassword.confirmnewpassword.$invalid}">
                            <label for="confirmnewpassword" class="col-sm-3 control-label">ยืนยันรหัสผ่านใหม่</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="confirmnewpassword" name="confirmnewpassword" ng-model="confirmnewpassword" password-confirm match-target="newpassword" placeholder="ยืนยันรหัสผ่านใหม่" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-success" style="height:35px;" ng-disabled="FormChangePassword.$invalid">บันทึก</button>
                                @*<button type="button" class="btn btn-danger" style="height:35px;" onclick="parent.location='#/'">ยกเลิก</button>*@
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="divider divider-lg"></div>
        </div>
    </div>
</section>

<!-- //end Page Content --> 