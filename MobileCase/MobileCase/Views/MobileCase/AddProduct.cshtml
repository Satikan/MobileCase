<!--Page Content-->
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="rect-nohover rect-equal-height">
                    <center><h2>เพิ่มสินค้า</h2></center>
                    <div class="divider-sm"></div>
                    <form class="form-horizontal" name="FormAddProduct" ng-submit="AddProduct()">
                        <div class="form-group" ng-class="{'has-error': FormAddProduct.productgroup.$invalid}">
                            <label for="productgroup" class="col-sm-3 control-label">ประเภทสินค้า</label>
                            <div class="col-sm-8">
                                <select class="form-control" id="productgroup" name="productgroup" ng-model="productgroup" ng-options="options.ProductGroupID as options.ProductGroupName for options in ProductGroup" required>
                                    <option value="">-- เลือก --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormAddProduct.productcode.$invalid}">
                            <label for="productcode" class="col-sm-3 control-label">รหัสสินค้า</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="productcode" name="productcode" ng-model="productcode" placeholder="รหัสสินค้า" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormAddProduct.productname.$invalid}">
                            <label for="productname" class="col-sm-3 control-label">ชื่อสินค้า</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="productname" name="productname" ng-model="productname" placeholder="ชื่อสินค้า" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="productquantity" class="col-sm-3 control-label">จำนวนสินค้า</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="productquantity" name="productquantity" ng-model="productquantity" placeholder="จำนวนสินค้า">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="productprice" class="col-sm-3 control-label">ราคาสินค้า</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="productprice" name="productprice" ng-model="productprice" placeholder="ราคาสินค้า">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-3 control-label">รูปสินค้า</label>
                            <div class="col-sm-8">
                                <input type="file" class="btn btn-default col-sm-12" ngf-select ng-model="picFile" name="file"
                                       accept="image/*" ngf-max-size="2MB" ngf-model-invalid="errorFile" />
                            </div>
                        </div>
                        <div class="form-group" ng-show="picFile">
                            <label for="inputPassword3" class="col-sm-3 control-label"></label>
                            <div class="col-sm-8">
                                <img ngf-src="picFile" class="thumb" width="250" height="200">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-success" style="height:35px;" ng-disabled="FormAddProduct.$invalid">บันทึก</button>
                                <button type="button" class="btn btn-danger" style="height:35px;" onclick="parent.location='#/product'">ยกเลิก</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="divider divider-lg"></div>
        </div>
    </div>
</section>

<!-- //end Page Content --> 