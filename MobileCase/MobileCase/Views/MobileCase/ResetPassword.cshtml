<!--Page Content-->
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="rect-nohover rect-equal-height">
                    <center><h2>เปลี่ยนแปลงรหัสผ่าน</h2></center>
                    <div class="divider-sm"></div>
                    <form class="form-horizontal" name="FormResetPassword" ng-submit="ResetPassword()">
                        <h3>รหัสผ่านใหม่</h3>
                        <div class="form-group" ng-class="{'has-error': FormResetPassword.newpassword.$invalid}">
                            <label for="newpassword" class="col-sm-3 control-label">รหัสผ่านใหม่</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="newpassword" name="newpassword" ng-model="Password" placeholder="รหัสผ่านใหม่" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormResetPassword.confirmnewpassword.$invalid}">
                            <label for="confirmnewpassword" class="col-sm-3 control-label">ยืนยันรหัสผ่านใหม่</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="confirmnewpassword" name="confirmnewpassword" ng-model="confirmnewpassword" password-confirm match-target="Password" placeholder="ยืนยันรหัสผ่านใหม่" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-success" style="height:35px;" ng-disabled="FormResetPassword.$invalid">บันทึก</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="divider divider-lg"></div>
        </div>
    </div>
</section>

<!-- //end Page Content --> 