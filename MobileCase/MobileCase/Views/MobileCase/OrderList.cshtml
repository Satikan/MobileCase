<section class="content" ng-init="GetListOrder()">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="subtitle">
                    <div><span style="line-height:26px;">รายการสั่งซื้อ</span></div>
                </div>
                <h6 class="right" style="margin-top: 15px;" ng-hide="$root.NumberOrder == 0"><strong>สถานะ :</strong> {{StatusOrder}}</h6>
                <div class="divider-sm"></div>
                <table class="table table-bordered" ng-hide="$root.NumberOrder == 0">
                    <tr ng-repeat="ListOrders in ListOrder">
                        <td width="75px" class="center"><img ng-src="~/{{ListOrders.ProductPicture}}" width="60" height="60" alt=""></td>
                        <td><a href="#">{{ListOrders.ProductName}}<br></a> <strong class="price">{{ListOrders.Amount}} x {{ListOrders.ProductPrice}}฿</strong></td>
                        <td width="60px" class="center">
                            <button type="button" ng-hide="ListOrders.StatusID == 2" class="btn btn-danger btn-xs" ng-click="DeleteOrder(ListOrders.OrderID, ListOrders.ProductID, ListOrders.Amount)" style="padding-top:0px;padding-right:5px;padding-bottom:0px;padding-left:5px;">
                                <span class="icon flaticon-recycle59"></span>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td align="right" colspan="3"><b>รวมทั้งหมด : </b>{{ getTotal() }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>