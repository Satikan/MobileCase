<!--Page Content-->
<section class="content" ng-init="GetEditProfile()">
    <div class="container">
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="col-sm-8 col-md-8 col-lg-8">
                <div class="rect-nohover rect-equal-height">
                    <center><h2>แก้ไขข้อมูลส่วนตัว</h2></center>
                    <div class="divider-sm"></div>
                    <form class="form-horizontal" name="FormEditMember" ng-submit="EditProfile()">
                        <h3>ข้อมูลทั่วไป</h3>
                        <div class="form-group" ng-class="{'has-error': FormEditMember.firstname.$invalid}">
                            <label for="firstname" class="col-sm-3 control-label">ชื่อ</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="firstname" name="firstname" ng-model="MemberByID.FirstName" placeholder="ชื่อ" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormEditMember.lastname.$invalid}">
                            <label for="lastname" class="col-sm-3 control-label">นามสกุล</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="lastname" name="lastname" ng-model="MemberByID.LastName" placeholder="นามสกุล" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormEditMember.email.$invalid}">
                            <label for="email" class="col-sm-3 control-label">อีเมลล์</label>
                            <div class="col-sm-8">
                                <input type="email" class="form-control" id="email" name="email" ng-model="MemberByID.Email" placeholder="อีเมลล์" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormEditMember.mobile.$invalid}">
                            <label for="mobile" class="col-sm-3 control-label">มือถือ</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="mobile" name="mobile" ng-model="MemberByID.Mobile" placeholder="มือถือ" required>
                            </div>
                        </div>
                        <h3>ที่อยู่</h3>
                        <div class="form-group" ng-class="{'has-error': FormEditMember.address.$invalid}">
                            <label for="address" class="col-sm-3 control-label">ที่อยู่</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="address" name="address" ng-model="MemberByID.Address" placeholder="ที่อยู่" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormEditMember.district.$invalid}">
                            <label for="district" class="col-sm-3 control-label">ตำบล/แขวง</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="district" name="district" ng-model="MemberByID.District" placeholder="ตำบล/แขวง" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormEditMember.city.$invalid}">
                            <label for="city" class="col-sm-3 control-label">อำเภอ/เขต</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="city" name="city" ng-model="MemberByID.City" placeholder="อำเภอ/เขต" required>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormEditMember.province.$invalid}">
                            <label for="province" class="col-sm-3 control-label">จังหวัด</label>
                            <div class="col-sm-8">
                                <select class="form-control" id="province" name="province" ng-model="MemberByID.Province" ng-options="options.ProvinceID as options.ProvinceName for options in Province" required>
                                    <option value="">-- เลือก --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{'has-error': FormEditMember.zipcode.$invalid}">
                            <label for="zipcode" class="col-sm-3 control-label">รหัสไปรษณีย์</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="zipcode" name="zipcode" maxlength="5" pattern="[\d-]*" ng-model="MemberByID.ZipCode" placeholder="รหัสไปรษณีย์" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-success" style="height:35px;" ng-disabled="FormEditMember.$invalid">บันทึก</button>
                                @*<button type="button" class="btn btn-danger" style="height:35px;" onclick="parent.location='#/'">ยกเลิก</button>*@
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2"></div>
            <div class="divider divider-lg"></div>
        </div>
    </div>
</section>

<!-- //end Page Content --> 